<div class="px-4 py-5 my-5 text-start">
  <h4 class="display-6 fw-bold text-center"><em>Create your Account</em></h4>
  <br>

  <div class="col-lg-6 mx-auto">
    <%= form_tag url_for(action: 'create'), method: "post" do %>
      <input type="hidden" name="authenticity_token" value=<%= form_authenticity_token %> >
      
      <%= label_tag "What's your first name?" %>
      <%= text_field_tag 'first_name', @user.first_name, class: "form-control", required: true %>
      <div class="invalid-feedback">
        Please enter a first name.
      </div>

      <br />

      <%= label_tag "What's your last name?" %>
      <%= text_field_tag 'last_name', @user.last_name, class: "form-control", required: true %>
      <div class="invalid-feedback">
        Please enter a last name.
      </div>
      
      <br />
      
      <%= label_tag "Give us few words about you" %>
      <%= text_field_tag 'description', @user.description, class: "form-control"%>
      
      <br /> 

      <%= label_tag "What's your email?" %>
      <%= text_field_tag 'email', @user.email, class: "form-control", required: true %>
      <div class="invalid-feedback">
        Please enter a valid email.
      </div>
      
      <br />
      
      <%= label_tag "Give me your age... Shhh I won't tell" %>
      <%= text_field_tag 'age', @user.age, class: "form-control"%>
      
      <br />

      <%= label_tag "Where do you live?" %>
      <%= text_field_tag 'city_name', nil, class: "form-control", required: true %>

      <br />

      <%= label_tag "Enter your Zip Code" %>
      <%= text_field_tag 'zip_code', nil, class: "form-control", required: true%>
      
      <br />

      <%= label_tag "Last step, define a password" %>
      <%= text_field_tag 'password', @user.password, class: "form-control", required: true %>
      <div class="invalid-feedback">
        Please enter a valid password (at least 6 characters).
      </div>

      <br />
      <br />
      <div class="text-center">
        <%= submit_tag "Create my profil", class: "btn btn-full-pink"  %>
      </div>
      
    <% end %>
  </div>
</div>