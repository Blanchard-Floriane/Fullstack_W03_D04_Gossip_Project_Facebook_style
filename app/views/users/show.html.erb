<div class="row px-4 py-2 justify-content-center">
  <div class="col-sm-4 my-4">
    <div class="card gossip_card_border">
      <div class="card-body">
        <h5 class="card-title"><%= @user.first_name %></h5>
        <br>
        <p class="card-text">Last Name: <%= @user.last_name %></p>
        <p class="card-text">Description: <%= @user.description %></p>
        <p class="card-text">Email: <%= @user.email %></p>
        <p class="card-text">Age: <%= @user.age %> years old</p>
        <p class="card-text">City: <%= link_to @user.city.name, city_path(@user.city.id) %></p>
      </div>
    </div>
  </div>
</div>