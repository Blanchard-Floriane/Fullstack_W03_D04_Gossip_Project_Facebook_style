<div class="px-4 py-5 my-5 text-start">
  <h4 class="display-6 fw-bold text-center"><em>Connection</em></h4>
  <br>

  <div class="col-lg-6 mx-auto">
    <%= form_tag("/sessions", method: "post") do %>
      <input type="hidden" name="authenticity_token" value=<%= form_authenticity_token %> >

      <%= label_tag "Email:" %>
      <%= text_field_tag 'email', @user.email, class: "form-control", required: true %>
      <div class="invalid-feedback">
        Please enter a valid email.
      </div>
      
      <br />

      <%= label_tag "Last step, define a password" %>
      <%= text_field_tag 'password', @user.password, class: "form-control", required: true %>
      <div class="invalid-feedback">
        Please enter a valid password (at least 6 characters).
      </div>

      <br />
      <br />
      <div class="text-center">
        <%= submit_tag "Sign In", class: "btn btn-full-pink"  %>
      </div>
      
    <% end %>
  </div>
</div>
