<div class="hero-color px-4 py-5 my-5 text-center">
  <h1 class="display-5 fw-bold"><em>Last Gossip</em></h1>
  <div class="col-lg-6 mx-auto">
    <blockquote class="blockquote lead mb-4">
      <br>
      <p><%= @gossips.last.content %></p>
      <br>
      <div class="blockquote-footer txt-white"><%= @gossips.last.user.first_name %> <%= @gossips.last.user.last_name %></div>
    </blockquote>
    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
      <% if current_user%>
        <%= link_to "Share a Gossip", new_gossip_path, class:"btn btn_white px-4 gap-3"%>
      <%else%>
        <%= link_to "Connect to Share a Gossip!", root_path, class:"btn btn_white px-4 gap-3"%>
      <%end%>
      
    </div>
  </div>
</div>

<div class="row px-4 py-2">
  <% @gossips.each do |gossip|%> 
    <div class="col-sm-4 my-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= gossip.title %></h5>
          <p class="card-text">Author: <%= gossip.user.first_name %></p>
          <div class="row">
            <div class="text-end">
              <%= link_to "See More", gossip_path(gossip.id), class:"btn btn-pink me-2" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
