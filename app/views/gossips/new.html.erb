<div class="px-4 py-5 my-5 text-center">
  <h6 class="display-6 fw-bold"><em>Share Your Gossip XOXO</em></h6>
  <br>

  <div class="col-lg-6 mx-auto">

    <%= form_tag url_for(action: 'create'), method: "post" do %>
      <input type="hidden" name="authenticity_token" value=<%= form_authenticity_token %> >

      <div class="form-floating mb-3">
        <h4><%= label_tag 'floatingTitle', 'Title' %></h4>
        <p><small class="text-muted"><em>Your title should be between 3 and 25 characters</em></small></p>
        <%= text_field_tag 'title', @gossip.title, class: "form-control", id: "floatingTitle", placeholder: "Your Title", required: true %>
        <div class="invalid-feedback">
          Please enter a title (between 3 and 25 characters).
        </div>
      </div>

      <br />

      <div class="form-floating mb-3">
        <h4><%= label_tag 'floatingTitle', 'Your Gossip Content' %></h4>
        <p><small class="text-muted"><em>Shhhhh... We won't tell</em></small></p>
        <%= text_area_tag 'content', @gossip.content, class: "form-control", id: "floatingContent", placeholder: "Your Gossip Content", required: true %>
        <div class="invalid-feedback">
          Please enter your gossip content.
        </div>
      </div>

      <br />
      
      <div class="form-floating mb-3">
        <%= submit_tag "Send your Gossip...", class: "btn btn-full-pink"  %>
      </div>
    <% end %>
    
  </div>
</div>
    


